{
  // window
  "window.title": "${rootName}",// ${activeEditorLong}${separator}
  "window.titleBarStyle": "native",
  "window.newWindowDimensions": "maximized",

  // editor
  "editor.suggestSelection": "first",
  "editor.fontSize": 18,
  "editor.fontWeight": "normal",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.fontFamily": "'Ricty Diminished Discord', Menlo, Monaco, 'Courier New', monospace",
  "editor.renderWhitespace": "all",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderControlCharacters": true,
  "editor.minimap.renderCharacters": false,

  // terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.fontFamily": "'Ricty Diminished Discord', Menlo, Monaco, 'Courier New', monospace",

  // files
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // redhat
  "redhat.telemetry.enabled": true,

  // workbench
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.visible": false,

  // telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,

  // diffEditor
  "diffEditor.ignoreTrimWhitespace": false,

  // extensions
  "extensions.autoUpdate": true,

  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.whichwrap": "b,s,h,l,<,>,[,],~",

  // vsintellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // vscode_vibrancy
  "vscode_vibrancy.opacity": 0,
  "vscode_vibrancy.type": "auto",

  // customizeUI
  "customizeUI.titleBar": "inline",
  "customizeUI.listRowHeight": 24,
  "customizeUI.font.regular": "'Ricty Diminished Discord', Menlo, Monaco, 'Courier New', monospace",
  "customizeUI.font.monospace": "'Ricty Diminished Discord', Menlo, Monaco, 'Courier New', monospace",
  "customizeUI.stylesheet": {},
  "workbench.colorTheme": "Iceberg",
  "workbench.list.automaticKeyboardNavigation": false,

  // TODO
  "todohighlight.keywords": [
      "DEBUG:",
      "REVIEW:",
      {
          "text": "NOTE:",
          "color": "#ff0000",
          "backgroundColor": "yellow",
      },
  ],
  "terminal.integrated.fontSize": 16,
  "java.project.importHint": false,
}
